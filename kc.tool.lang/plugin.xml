<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="kc.tool.lang.view.LangView"
            id="kc.tool.lang.view"
            name="Lang"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="kc.tool.lang.Perspective"
            id="kc.tool.lang.perspective"
            name="Lang">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="kc.tool.lang.perspective">
         <view
               id="kc.tool.lang.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <hiddenMenuItem
               id="kc.tool.excel.import">
         </hiddenMenuItem>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="kc.tool.lang.select.file"
            name="Select File">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="kc.tool.lang.handlers.SelectFileHandler"
            commandId="kc.tool.lang.select.file">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="kc.tool.lang.select.file"
                  label="Select File"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
